{
  "permissions": {
    "allow": [
      "Bash(npm run compile:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(rg:*)",
      "Bash(npx tsc:*)",
      "Bash(mkdir:*)",
      "Bash(npm test)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm run:*)",
      "Bash(npx vsce:*)",
      "Bash(ls:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(curl:*)",
      "Bash(chmod:*)",
      "Bash(code:*)",
      "Bash(vsce package:*)",
      "Bash(claude:*)",
      "Bash(make:*)",
      "Bash(jq:*)",
      "Bash(cp:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(diff:*)",
      "Bash(find:*)",
      "Bash(bash:*)",
      "Bash(export CLAUDE_HOOKS_AUTOFIX_SILENT=false)",
      "Bash(npx eslint:*)",
      "Bash(.claude/hooks/smart-quality-check.sh:*)",
      "Bash(npx mocha:*)",
      "Bash(tree:*)",
      "Bash(.claude/hooks/single-file-quality-check.sh:*)",
      "Bash(./.claude/hooks/single-file-quality-check.sh:*)",
      "Bash(npx prettier:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(unlink:*)",
      "Bash(find:*-delete*)",
      "Bash(perl:*unlink*)",
      "Bash(python:*unlink*)",
      "Bash(python:*remove*)",
      "Bash(ruby:*unlink*)",
      "Bash(ruby:*delete*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["time"],
  "disabledMcpjsonServers": ["exa"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/single-file-quality-check.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tool_use.py"
          }
        ]
      }
    ]
  }
}
