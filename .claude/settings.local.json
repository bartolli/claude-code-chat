{
  "permissions": {
    "allow": [
      "Bash(npm run compile:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(rg:*)",
      "Bash(npx tsc:*)",
      "Bash(mkdir:*)",
      "Bash(npm test)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm run:*)",
      "Bash(npx vsce:*)",
      "Bash(ls:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(curl:*)",
      "Bash(chmod:*)",
      "Bash(code:*)",
      "Bash(vsce package:*)",
      "Bash(claude:*)",
      "Bash(make:*)",
      "Bash(jq:*)",
      "Bash(cp:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(diff:*)",
      "Bash(find:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "time"
  ],
  "disabledMcpjsonServers": [
    "exa"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/smart-quality-check.sh"
          }
        ]
      }
    ]
  }
}