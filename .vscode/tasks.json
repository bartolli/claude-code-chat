// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch:extension",
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "\\[tsl\\] ERROR in (.*?)\\((\\d+),(\\d+)\\)\\s*:\\s*(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "webpack is watching",
						"endsPattern": "webpack.*compiled"
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "npm: watch:extension"
		}
	]
}
